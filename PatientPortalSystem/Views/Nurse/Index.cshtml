

@{
    ViewData["Title"] = "Nurse Dashboard";
    Layout = "~/Views/Shared/_NurseLayout.cshtml";
}

<h1>Nurse Dashboard</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Today's Appointments</h2>
        </div>
        <div class="col-6 text-end">
            
        </div>
    </div>
</div>
<br />  

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Patient
            </th>
            <th>
                Reason
            </th>
            <th>
                Time
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.PatientName
                </td>
                <td width="20%">
                    @obj.Reason
                </td>
                <td width="20%">
                    @TimeOnly.FromDateTime(obj.AppointmentDate)
                </td>
                <td width="10%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Nurse" asp-action="ViewAppointment" asp-route-id="@obj.AppointmentId"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>View</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

