@model PatientPortalSystem.Models.AppointmentNote

@{
    ViewData["Title"] = "CreateAppointmentNotes";
    Layout = "~/Views/Shared/_NurseLayout.cshtml";
}

<h1>Add Appointment Note</h1>

<h4>Appointment Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAppointmentNotes">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="AppointmentId" class="form-control" />
                <span asp-validation-for="AppointmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="DateInfo" class="form-control" />
                <span asp-validation-for="DateInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeartRate" class="control-label">Heart Rate</label>
                <input asp-for="HeartRate" class="form-control" />
                <span asp-validation-for="HeartRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodPressure" class="control-label">Blood Pressure</label>
                <input asp-for="BloodPressure" class="form-control" />
                <span asp-validation-for="BloodPressure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Oxygen" class="control-label"></label>
                <input asp-for="Oxygen" class="form-control" />
                <span asp-validation-for="Oxygen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NurseComments" class="control-label">Nurse Comments</label>
                <textarea asp-for="NurseComments" class="form-control" rows="5"></textarea>
                <span asp-validation-for="NurseComments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
