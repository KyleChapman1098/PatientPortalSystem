@model NurseDashboardViewModel

@{
    ViewData["Title"] = "Generate Appointment Notes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Generate Appointment Notes</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col">
            <h2>Patient Information</h2>
            <table class="table">
                <tr>
                    <th>Patient ID:</th>
                    <td>@Model.PatientId</td>
                </tr>
                <tr>
                    <th>First Name:</th>
                    <td>@Model.PatientFirstName</td>
                </tr>
                <tr>
                    <th>Last Name:</th>
                    <td>@Model.PatientLastName</td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row pt-4">
        <div class="col">
            <h2>Appointment Notes</h2>
            <!-- generating appointment notes -->
            <form asp-controller="Nurse" asp-action="GenerateAppointmentNotes">
                <input type="hidden" name="patientId" value="@Model.PatientId" />
                <div class="mb-3">
                    <label for="notes">Appointment Notes:</label>
                    <textarea class="form-control" id="notes" name="notes" rows="5"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Generate Notes</button>
            </form>
        </div>
    </div>
</div>
