@model PatientPortalSystem.Models.AppointmentNotes

@{
    ViewData["Title"] = "Generate Appointment Notes";
    Layout = "~/Views/Shared/_NurseLayout.cshtml";
}

<h1>Generate Appointment Notes</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="GenerateAppointmentNotes">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientName" class="control-label"></label>
                <input asp-for="PatientName" class="form-control" />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Nurse Dashboard</a>
</div>
