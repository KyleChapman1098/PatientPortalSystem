@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Admin Page</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Staff List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="CreateStaffAccount" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> New Staff
            </a>
        </div>
    </div>
</div>
<br />  

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Username
            </th>
            <th>
                Role
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            @if (obj.Role != "Patient")
            {
                <tr>
                    <td width="20%">
                        @obj.FirstName
                    </td>
                    <td width="20%">
                        @obj.LastName
                    </td>
                    <td width="20%">
                        @obj.Username
                    </td>
                    <td width="20%">
                        @obj.Role
                    </td>
                    <td width="10%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Admin" asp-action="UpdateStaffAccount" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Admin" asp-action="DeleteStaffAccount" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-trash-fill"></i>Remove</a>
                        </div>
                    </td>
                </tr>
            }

        }
    </tbody>
</table>

