@model IEnumerable<Request>

@{
    ViewData["Title"] = "Requests";
    Layout = "~/Views/Shared/_ReceptionistLayout.cshtml";
}

<h1>Requests</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Open Requests</h2>
        </div>
        <div class="col-6 text-center">
         
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Patient Name
            </th>
            <th>
                Username
            </th>
            <th>
                Request Type
            </th>
            <th>
                Received
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="">
                    @obj.PatientName
                </td>
                <td width="">
                    @obj.PatientUsername
                </td>
                <td width="">
                    @obj.RequestType
                </td>
                <td>
                    @obj.MessageTime
                </td>
                <td width="16%">
                    <a asp-controller="Receptionist" asp-action="ViewRequest" asp-route-id="@obj.RequestId" class="btn btn-secondary">View</a>
                    <a asp-controller="Receptionist" asp-action="CloseRequest" asp-route-id="@obj.RequestId" class="btn btn-secondary">Close Request</a>
                </td>
            </tr>
        }
    </tbody>
</table>
