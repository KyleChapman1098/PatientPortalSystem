@model List<User>
@{
    ViewData["Title"] = "Patients";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<h1>My Patients</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Patient List</h2>
        </div>
        <div class="col-6 text-end">
            
        </div>
    </div>
</div>
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Username
            </th>
            <th>
                Phone
            </th>
            <th>
                Email
            </th>
            <th>
                Patient Since
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="15%">
                    @obj.FirstName @obj.LastName
                </td>
                <td width="15%">
                    @obj.Username
                </td>
                <td width="15%">
                    @obj.Phone
                </td>
                <td width="25%">
                    @obj.Email
                </td>
                <td width="15%">
                    @obj.DateRegistered
                </td>
                <td width="20%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Doctor" asp-action="ViewPatientFile" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Open Patient File</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
