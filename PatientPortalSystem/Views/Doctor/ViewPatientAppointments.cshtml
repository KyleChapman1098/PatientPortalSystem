@model IEnumerable<Appointment>
@{
	ViewData["Title"] = "ViewPatientAppointments";
	Layout = "~/Views/Shared/_DoctorLayout.cshtml";
	var user = Model.ElementAtOrDefault(0);
	var name = user.PatientName;
}

<h1>Patient Appointments</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@name's Appointments</h2>
        </div>
        <div class="col-6 text-center">
        </div>
        <div class="col-6 text-end">
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:80%">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Time
            </th>
            <th>
                Reason
            </th>
            <th>
                Doctor
            </th>
            <th>
                Scheduler
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @DateOnly.FromDateTime(obj.AppointmentDate)
                </td>
                <td>
                    @TimeOnly.FromDateTime(obj.AppointmentDate)
                </td>
                <td>
                    @obj.Reason
                </td>
                <td>
                    @obj.DoctorName
                </td>
                <td>
                    @obj.SchedulerName
                </td>
                <td width="17%">
                    <a asp-controller="Doctor" asp-action="ViewAppointment" asp-route-id="@obj.AppointmentId" class="btn btn-secondary">View Appointment</a>
                </td>
            </tr>
        }
    </tbody>
</table>

