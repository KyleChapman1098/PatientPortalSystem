@model PatientPortalSystem.Models.Patient

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<h1>Update Emergency Contact</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateContact">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PatientId" />
            <div class="form-group">
                <input type="hidden" asp-for="PhysicianId" class="form-control" />
                <span asp-validation-for="PhysicianId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmergencyContactFirstName" class="control-label"></label>
                <input asp-for="EmergencyContactFirstName" class="form-control" />
                <span asp-validation-for="EmergencyContactFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmergencyContactLastName" class="control-label"></label>
                <input asp-for="EmergencyContactLastName" class="form-control" />
                <span asp-validation-for="EmergencyContactLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmergencyContactPhone" class="control-label"></label>
                <input asp-for="EmergencyContactPhone" class="form-control" />
                <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmergencyContactAddress" class="control-label"></label>
                <input asp-for="EmergencyContactAddress" class="form-control" />
                <span asp-validation-for="EmergencyContactAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="PreviousClinicName" class="form-control" />
                <span asp-validation-for="PreviousClinicName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="PreviousClinicPhone" class="form-control" />
                <span asp-validation-for="PreviousClinicPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="PreviousClinicAddress" class="form-control" />
                <span asp-validation-for="PreviousClinicAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Allergies" class="form-control" />
                <span asp-validation-for="Allergies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Medications" class="form-control" />
                <span asp-validation-for="Medications" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Conditions" class="form-control" />
                <span asp-validation-for="Conditions" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="hidden" class="form-check-input" asp-for="SendReminders" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="PatientInfo">Back to Account</a>
</div>

